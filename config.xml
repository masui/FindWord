<?xml version='1.0' encoding='utf-8'?>
<widget id="findword.com.pitecan" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FindWord</name>
    <description>
        Finding a four-letter word in a character matrix.
    </description>
    <author email="masui@pitecan.com" href="http://pitecan.com/">
        Toshiyuki Masui
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="admob" spec="^5.5.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
